generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           Int               @id @default(autoincrement())
  firstName    String
  lastName     String
  userName     String            @unique
  email        String?           @unique
  createdAt    DateTime          @default(now())
  phoneNumber  String?
  password     String
  studentType  String?
  updatedAt    DateTime          @updatedAt
  examSessions JambExamSession[]
}

model Subject {
  id       Int     @id @default(autoincrement())
  name     String
  examType String
  scores   Score[]

  @@unique([name, examType])
}

model Score {
  id            Int              @id @default(autoincrement())
  examType      String
  examSubject   String
  subjectId     Int
  examYear      String
  score         Int
  date          DateTime         @default(now())
  jambSessionId Int?
  jambSession   JambExamSession? @relation(fields: [jambSessionId], references: [id])
  subject       Subject          @relation(fields: [subjectId], references: [id])

  @@unique([jambSessionId, examSubject])
}

model Question {
  id          String   @id
  question    String
  options     String[]
  answer      String
  examType    String
  examSubject String
  examYear    String
  answers     Answer[]

  @@unique([examYear, id])
}

model JambExamSession {
  id          Int       @id @default(autoincrement())
  subjects    String[]
  examYear    String
  startTime   DateTime  @default(now())
  endTime     DateTime?
  isCompleted Boolean   @default(false)
  studentId   Int
  answers     Answer[]
  student     Student   @relation(fields: [studentId], references: [id])
  scores      Score[]
}

model Answer {
  id         Int             @id @default(autoincrement())
  sessionId  Int
  questionId String
  answer     String
  question   Question        @relation(fields: [questionId], references: [id])
  session    JambExamSession @relation(fields: [sessionId], references: [id])

  @@unique([sessionId, questionId])
  @@index([sessionId])
  @@index([questionId])
}
