generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  id          Int      @id @default(autoincrement())
  name        String   
  examType    String
  scores      Score[]
}

model Score {
  id            Int             @id @default(autoincrement())
  examType      String
  examSubject   String
  subjectId     Int
  examYear      String
  score         Int
  date          DateTime        @default(now())
  subject       Subject         @relation(fields: [subjectId], references: [id])
  jambSession   JambExamSession? @relation(fields: [jambSessionId], references: [id])
  jambSessionId Int?
}

model Question {
  id          String   @id
  question    String
  options     String[]
  answer      String
  examType    String
  examSubject String
  examYear    String
  answers     Answer[]
  @@unique([examYear, id])
}

model JambExamSession {
  id             Int      @id @default(autoincrement())
  subjects       String[] // e.g., ["english language", "mathematics", "physics", "chemistry"]
  examYear       String
  startTime      DateTime @default(now())
  endTime        DateTime?
  isCompleted    Boolean  @default(false)
  scores         Score[]
  answers        Answer[]
}

model Answer {
  id           Int      @id @default(autoincrement())
  sessionId    Int
  questionId   String
  answer       String
  session      JambExamSession @relation(fields: [sessionId], references: [id])
  question     Question       @relation(fields: [questionId], references: [id])
  @@index([sessionId])
  @@index([questionId])
}